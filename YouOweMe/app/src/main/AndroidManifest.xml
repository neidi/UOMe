<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.hslu.mobpro.youoweme.app" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DebtCreationActivity"
            android:label="@string/title_activity_creditor" >
        </activity>
        <activity
            android:name=".UserCreationActivity"
            android:label="@string/title_activity_user_creation" >
        </activity>
        <activity
            android:name=".DebtActivity"
            android:label="@string/title_activity_debt" >
        </activity>
    </application>

</manifest>

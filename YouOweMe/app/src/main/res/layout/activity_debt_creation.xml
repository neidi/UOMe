<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="ch.hslu.mobpro.youoweme.app.DebtCreationActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="User:"
            android:id="@+id/txtViewUser" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="36dp"
            android:layout_alignRight="@+id/txtViewAmount" android:layout_alignEnd="@+id/txtViewAmount"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:text="Betrag:"
              android:id="@+id/txtViewAmount"
              android:layout_below="@+id/userEditText" android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Grund:"
            android:id="@+id/txtViewReason"
            android:layout_below="@+id/passwordEditText" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="FÃ¤lligkeit:"
            android:id="@+id/txtViewDueDate"
            android:layout_marginTop="36dp"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="UserName"
            android:ems="10"
            android:id="@+id/userEditText"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="Betrag"
        android:id="@+id/amountEditText"
        />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnDebtCreateText"
            android:id="@+id/createDebtButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:onClick="onCreateDebtClicked"/>
</RelativeLayout>
